    <fragment
        android:id="@+id/wifiScanFragment"
        android:name="makethings.io.fragments.wifiscan.WifiScanFragment"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        tools:layout="@layout/wifi_scan_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

        <EditText
            android:id="@+id/wifiSsid"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:autofillHints="username"
            android:ems="10"
            android:hint="@string/ssidInputHint"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wifiScanFragment" />

        <EditText
            android:id="@+id/wifiPassword"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:autofillHints="password"
            android:ems="10"
            android:hint="@string/passwordInputHint"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wifiSsid" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:text="@string/connect_button_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wifiPassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>